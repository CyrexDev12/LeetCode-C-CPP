class Solution {
public:
    vector<vector<int>> generate(int numRows) {
        
        vector<vector<int>> pascalTri;

        for (int i = 0; i < numRows; i++) {
            vector<int> row;

            for (int j = 0; j <= i; j++) {
                if (j == 0 || j == i) {
                    row.push_back(1);
                } else {
                     int val = pascalTri.at(i - 1).at(j - 1) + pascalTri.at(i - 1).at(j);
                     row.push_back(val);
                }
            }
            pascalTri.push_back(row);
        }
        return pascalTri;
    }
};
